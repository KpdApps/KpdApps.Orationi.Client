<Window x:Class="KpdApps.Orationi.Client.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:KpdApps.Orationi.Client"
        mc:Ignorable="d"
        Title="Orationi Client" Height="350" Width="525" WindowStartupLocation="CenterScreen">
	<Grid>
		<DataGrid x:Name="dataGrid" Margin="5" HorizontalAlignment="Stretch" VerticalAlignment="Stretch"
			ItemsSource="{Binding Source=Slaves}" AutoGenerateColumns="false" CanUserResizeColumns="true">
			<DataGrid.Columns>
				<DataGridTextColumn Header="Order" Binding="{Binding Order}"/>
				<DataGridTextColumn Header="Name" Binding="{Binding Name}" Width="300"/>
				<DataGridTextColumn Header="Started" Binding="{Binding StartDate}"/>
			</DataGrid.Columns>
		</DataGrid>
	</Grid>
</Window>
